generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model MuscularGroup{
  id Int @id @default(autoincrement())
  name String
  exercises Exercise[]
  bodyPartId Int
  bodyPart BodyPart @relation(fields: [bodyPartId], references: [id])
}

model BodyPart{
  id Int @id @default(autoincrement())
  name String
  muscularGroups MuscularGroup[]
}

model Set{
  id Int @id @default(autoincrement())
  reps Int
  weight Float
  exerciseId Int
  exercise Exercise @relation(fields: [exerciseId], references: [id])
}

model Exercise{
  id Int @id @default(autoincrement())
  name String
  description String
  muscularGroupId Int
  muscularGroup MuscularGroup @relation(fields: [muscularGroupId], references: [id])
  sets Set[]
  seances Seance[]
}

model Seance{
  id Int @id @default(autoincrement())
  date DateTime
  exercises Exercise[]
  userId Int
  user User @relation(fields: [userId], references: [id])
}

model User{
  id Int @id @default(autoincrement())
  username String @unique
  email String @unique
  password String
  seances Seance[]
}
