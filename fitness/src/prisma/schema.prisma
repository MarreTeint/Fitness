// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model MuscularGroup {
  id         Int        @id @default(autoincrement())
  name       String
  bodyPartId Int
  bodyPart   BodyPart   @relation(fields: [bodyPartId], references: [id])
}

model BodyPart {
  id             Int             @id @default(autoincrement())
  name           String
  muscularGroups MuscularGroup[]
}

model Set {
  id         Int   @id @default(autoincrement())
  reps       Int
  weight     Float
  exerciseId Int
}

model Exercise {
  id              Int           @id @default(autoincrement())
  description     String
  muscularGroupId Int
  bodyPartId      Int
}

model Seance {
  id     Int  @id @default(autoincrement())
  userId Int
  user   User @relation(fields: [userId], references: [id])
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  email    String   @unique
  password String
  seances  Seance[]
}
